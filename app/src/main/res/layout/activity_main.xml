<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="com.example.pep.kuismatematika.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New"
        android:id="@+id/btnsoal"
        android:onClick="newpr"/>
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt1"
        android:text="Angka 1"
        android:textAlignment="center"

        android:layout_below="@+id/btnsoal"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="operator"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/txt1"
        android:layout_alignBottom="@+id/txt1"
        android:layout_alignLeft="@+id/edtopr"
        android:layout_alignStart="@+id/edtopr" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt2"
        android:layout_alignBottom="@+id/txt2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Angka 2"
        android:textAlignment="center" />
    <EditText
        android:layout_width="75dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/edtangk1" />
    <EditText
        android:layout_width="75dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtangk1"
        android:layout_alignBottom="@+id/edtangk1"
        android:layout_centerHorizontal="true"
        android:text="+"
        android:textAlignment="center"
        android:id="@+id/edtopr" />
    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:enabled="false"
        android:layout_alignBaseline="@+id/edtopr"
        android:layout_alignBottom="@+id/edtopr"
        android:layout_alignParentRight="true"
        android:id="@+id/edtangk2"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtangk1"
        android:layout_marginTop="20dp"
        android:id="@+id/edtisi"
        android:text="0"
        android:textAlignment="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btncek"
        android:layout_below="@+id/edtisi"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:text="Cek Answer"
        android:onClick="cekans"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Answer Is "
        android:layout_below="@+id/btncek"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:id="@+id/txt4"/>
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt4"
        android:id="@+id/txt5"
        android:text="0"/>
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt5"
        android:id="@+id/txt6"
        android:text="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:id="@+id/txt7"
        android:text="Wrong Answer"
        android:layout_alignTop="@+id/txt6"
        android:layout_alignLeft="@+id/txt8"
        android:layout_alignStart="@+id/txt8" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:id="@+id/txt8"
        android:text="Correct Answer"
        android:layout_alignBaseline="@+id/txt5"
        android:layout_alignBottom="@+id/txt5"
        android:layout_toRightOf="@+id/edtangk1"
        android:layout_toEndOf="@+id/edtangk1" />
</RelativeLayout>
